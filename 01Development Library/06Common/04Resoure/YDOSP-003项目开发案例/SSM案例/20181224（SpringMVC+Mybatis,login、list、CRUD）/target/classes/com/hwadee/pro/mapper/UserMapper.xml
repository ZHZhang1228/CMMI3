<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hwadee.pro.dao.UserDaoI">
	<select id="getAllUser" parameterType="int" resultType="users">
		select *
		from users
	</select>

	<!-- 用户登录的判断返回一个user给service处理 -->
	<select id="userLogin" parameterType="users" resultType="users">
		<!-- select username,password from users where username=#{username} and
		password=#{password} -->
		select * from users where username=#{username} 
	</select>
</mapper>