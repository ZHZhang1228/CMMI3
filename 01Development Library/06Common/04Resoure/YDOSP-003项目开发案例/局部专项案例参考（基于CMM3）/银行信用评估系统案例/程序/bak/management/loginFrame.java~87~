  void jComboBox1_itemStateChanged(ItemEvent e) {
    for(int i=0;i<2;i++)
   if(jComboBox1.getSelectedIndex()==i)
     str=(String)jComboBox1.getSelectedItem();
    for(int i=0;i<b.length;i++)
                if(str.equals(b[i]))
                  str=a[i];

  }
