public class inforPanel extends JPanel {
  JLabel jLabel1 = new JLabel();
  JLabel jLabel2 = new JLabel();
  JLabel jLabel3 = new JLabel();
  JLabel jLabel4 = new JLabel();
  JLabel jLabel5 = new JLabel();
  JLabel jLabel6 = new JLabel();

  public inforPanel() {
    try {
      jbInit();
    }
    catch(Exception ex) {
      ex.printStackTrace();
    }
  }
  void jbInit() throws Exception {
    jLabel1.setFont(new java.awt.Font("Dialog", 1, 28));
    jLabel1.setForeground(Color.blue);
    jLabel1.setText("欢迎光临学生成绩管理系统");
    jLabel1.setBounds(new Rectangle(20, 25, 365, 68));
    this.setLayout(null);
    jLabel2.setFont(new java.awt.Font("Dialog", 1, 23));
    jLabel2.setText("计5信息技术中心");
    jLabel2.setBounds(new Rectangle(182, 108, 184, 59));
    jLabel4.setFont(new java.awt.Font("Dialog", 1, 20));
    jLabel4.setForeground(SystemColor.menuText);
    jLabel4.setText("版本号   :      1.0");
    jLabel4.setBounds(new Rectangle(62, 213, 264, 20));
    jLabel3.setFont(new java.awt.Font("Dialog", 3, 14));
    jLabel3.setText("  向忠陶，梁杰，谢英伟，徐文庆");
    jLabel3.setBounds(new Rectangle(173, 156, 296, 46));
    jLabel5.setFont(new java.awt.Font("Dialog", 1, 21));
    jLabel5.setText("开发人员： ");
    jLabel5.setBounds(new Rectangle(56, 162, 129, 33));
    jLabel6.setFont(new java.awt.Font("Dialog", 1, 23));
    jLabel6.setText("版   权：");
    jLabel6.setBounds(new Rectangle(60, 121, 144, 33));
    this.add(jLabel1, null);
    this.add(jLabel2, null);
    this.add(jLabel3, null);
    this.add(jLabel6, null);
    this.add(jLabel5, null);
    this.add(jLabel4, null);
  }
}